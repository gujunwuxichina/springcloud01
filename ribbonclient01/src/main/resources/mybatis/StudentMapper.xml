<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gujun.ribbonclient01.dao.StudentMapper">

    <select id="getAll" resultType="st">
        select
            *
        from
            student_tab
    </select>

    <select id="getById" parameterType="int" resultType="st">
        select
            *
        from
            student_tab
        where
            sId=#{sId}
    </select>

    <insert id="saveOne" parameterType="st" useGeneratedKeys="true" keyProperty="sId">
        insert into
            student_tab
        (sName, sage, sex) values (#{sName},#{sage},#{sex})
    </insert>

    <delete id="deleteById" parameterType="int">
        delete
        from
            student_tab
        where
            sId=#{sId}
    </delete>

    <update id="update" parameterType="st">
        update
        student_tab
        set
            sName=#{sName},
            sage=#{sage},
            sex=#{sex}
        where
            sId=#{sId}
    </update>

</mapper>